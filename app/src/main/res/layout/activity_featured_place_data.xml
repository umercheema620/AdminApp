<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeaturedPlaceData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/cancelToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:onClick="GotoFeatureList"
            android:src="@drawable/close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/muli_bold"
            android:text="Data of the place"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/featureimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="Name: "
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/featurename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_extralight"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="Description: "
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/featuredesc"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:fontFamily="@font/muli_extralight"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>







        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/feature_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Feature"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:onClick="Feature"
                android:background="@color/colorPrimary"/>

            <Button
                android:id="@+id/notfeature_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove from feature"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:onClick="NotFeature"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>